<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".takeMedicineOccur.reminder.ActivityAddReminder">

    <Button android:background="@drawable/savicon"
            android:layout_width="134dp"
            android:layout_height="169dp"
            android:id="@+id/Add_Med_Occur_SAVE"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_gravity="center_vertical"/>
    <TextView
            android:text="@string/chooseReminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reminder_const" android:textSize="24sp"
            android:textStyle="bold|italic" android:textColor="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"/>
    <Button
            android:background="@drawable/iconforreminder"
            android:layout_width="134dp"
            android:layout_height="169dp"
            android:id="@+id/buttonReminderChooseTime" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textViewReminderTimeIform" android:layout_marginBottom="56dp"/>
    <TextView
            android:text="Kilinj na przycisk aby wybrać godzinę przypomnienia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewReminderInform" android:textSize="15sp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/reminder_const"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/buttonReminderChooseTime"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="Wybrana godzina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewReminderTimeIform" android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="30dp"
            android:layout_marginBottom="56dp"
            app:layout_constraintBottom_toTopOf="@+id/Add_Med_Occur_SAVE" android:textColor="@color/colorPrimary"/>
    <TextView
            android:text="Wybrana godzina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewReminderTime"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="30dp" android:textSize="15sp"
            android:layout_marginBottom="56dp" app:layout_constraintBottom_toTopOf="@+id/Add_Med_Occur_SAVE"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/buttonReminderChooseTime"
            app:layout_constraintVertical_bias="1.0"/>
</android.support.constraint.ConstraintLayout>