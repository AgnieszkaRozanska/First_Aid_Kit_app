<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="178dp"
        tools:context=".firstAidKitAllYourMedicines.adapter.ShowAllMedicinesAdapter">

    <android.support.v7.widget.CardView
            android:id="@+id/Medicine_cardView"
            android:layout_width="match_parent"
            android:layout_height="158dp"
            app:layout_constraintTop_toTopOf="parent"
            app:cardCornerRadius="10dp"
            android:padding="10dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent">
        <android.support.constraint.ConstraintLayout
                android:orientation="vertical"
                android:layout_width="360dp"
                android:layout_height="158dp" android:padding="3dp" android:layout_margin="10dp">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="22dp"
                    android:ems="10"
                    android:id="@+id/MedicineName_cardView"
                    android:hint="@string/ActivityCardViewMdicineName"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textColor="@color/colorPrimary"
                    android:paddingLeft="10dp" android:paddingTop="5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                    android:id="@+id/Kind_cardView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:ellipsize="end"
                    android:ems="10"
                    android:hint="@string/ActivityCardViewMedicineKind"
                    android:lines="2"
                    android:paddingLeft="10dp"
                    android:textAlignment="viewStart"
                    android:textSize="13sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/MedicineName_cardView" />

            <TextView
                    android:id="@+id/Cout_cardView"
                    android:layout_width="wrap_content"
                    android:layout_height="29dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:ems="10"
                    android:lines="2"
                    android:paddingLeft="10dp"
                    android:text="Ilość tabletek"
                    android:textAlignment="viewStart"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/Kind_cardView" />

            <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="82dp"
                    android:layout_height="96dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/icondrugs"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.357" />


        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>