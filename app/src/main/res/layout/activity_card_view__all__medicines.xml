<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".card_view_All_Medicines">

    <android.support.v7.widget.CardView
            android:id="@+id/Medicine_cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cardCornerRadius="10dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.017">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="376dp"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="28dp"
                    android:ems="10"
                    android:id="@+id/MedicineName_cardView"
                    android:hint="Nazwa leku"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textColor="@color/colorPrimary"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="Rodzaj"
                    android:textSize="18sp"
                    android:ems="10"
                    android:id="@+id/Kind_cardView"
                    android:ellipsize="end"
                    android:textAlignment="viewStart" android:lines="2"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ilość sztuk"
                    android:textSize="18sp"
                    android:ems="10"
                    android:id="@+id/Count_cardView"
                    android:ellipsize="end"
                    android:textAlignment="viewStart" android:lines="2"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Opis"
                    android:textSize="18sp"
                    android:ems="10"
                    android:id="@+id/Description_cardView"
                    android:ellipsize="end"
                    android:layout_marginBottom="5dp"
                    android:textAlignment="viewStart" android:lines="2"/>

        </LinearLayout>
   </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>