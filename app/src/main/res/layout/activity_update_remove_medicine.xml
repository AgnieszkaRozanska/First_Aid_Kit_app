<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/menu"
        tools:context=".firstAidKitAllYourMedicines.ActivityUpdateRemoveMedicine">

    <TextView
            android:hint="Medicine Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/UpdateRemoveMedicine_MedicineName"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="92dp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="28sp"/>
    <TextView
            android:hint="Medicine kind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/updateRemoveTakeMedicineOccur_Dose"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/UpdateRemoveMedicine_MedicineName"
            android:layout_marginEnd="40dp" app:layout_constraintEnd_toEndOf="parent"
    />
    <TextView
            android:hint="Medicine Count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/updateRemoveTakeMedicineOccur_MedicineTimeofDay"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/updateRemoveTakeMedicineOccur_Dose"
            android:layout_marginEnd="40dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:hint="Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/updateRemoveTakeMedicineOccur_MedicineAfterBeforeMeal"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/updateRemoveTakeMedicineOccur_MedicineTimeofDay"
            android:layout_marginEnd="40dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:layout_width="155dp"
            android:layout_height="168dp"
            android:background="@drawable/removemed"
            android:id="@+id/Button_RemoveMedicine"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="44dp"
            android:layout_marginBottom="140dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_UpdateDoseTakeMedicineOccur"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.272"/>
    <Button
            android:layout_width="152dp"
            android:layout_height="164dp"
            android:background="@drawable/updatemed"
            android:id="@+id/button_UpdateDoseTakeMedicineOccur"
            android:layout_marginBottom="144dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="36dp"/>
    <TextView
            android:text="Ilość posiadanych sztuk"
            android:layout_width="151dp"
            android:layout_height="55dp"
            android:id="@+id/textView" android:textAlignment="center"
            app:layout_constraintEnd_toStartOf="@+id/updateRemoveTakeMedicineOccur_MedicineTimeofDay"
            android:layout_marginEnd="24dp" android:layout_marginTop="72dp"
            app:layout_constraintTop_toBottomOf="@+id/UpdateRemoveMedicine_MedicineName"/>

</android.support.constraint.ConstraintLayout>