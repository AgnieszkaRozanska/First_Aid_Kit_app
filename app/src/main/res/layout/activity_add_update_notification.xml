<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".firstAidKitAllYourMedicines.notlification.AddUpdateNotification">

    <TextView
            android:text="Medicine name"
            android:layout_width="202dp"
            android:layout_height="35dp"
            android:id="@+id/textView_NotificationMedName"
            android:layout_marginTop="64dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            android:textColor="@color/colorPrimary" android:textSize="20sp" android:textStyle="bold"/>


    <ImageView
            android:layout_width="85dp"
            android:layout_height="87dp"
            app:srcCompat="@drawable/icondrugs"
            android:id="@+id/imageView_NotificationImage"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="36dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"

            app:layout_constraintStart_toEndOf="@+id/textView_NotificationMedName" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:text="Wpisz ilość sztuk lekarstwa poniżej której należy zgłosić powiadomienie o małej ilości leku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8" android:layout_marginTop="84dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_NotificationMedName" android:padding="5dp"
            app:layout_constraintStart_toStartOf="parent" android:textSize="18sp" android:textAlignment="viewStart"/>

    <EditText android:layout_width="231dp"
              android:layout_height="48dp"
              android:background="@drawable/prostokat"
              android:textAlignment="center"
              app:layout_constraintEnd_toEndOf="parent"
              android:id="@+id/EditText_NotificationAmount"
              android:inputType="numberDecimal"
              android:layout_gravity="center_vertical"
              android:layout_marginEnd="76dp" android:layout_marginTop="36dp"
              app:layout_constraintTop_toBottomOf="@+id/textView8" android:layout_marginStart="8dp"
              app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="1.0"/>

    <Button
            android:background="@drawable/savicon"
            android:layout_width="134dp"
            android:layout_height="176dp"
            android:id="@+id/Button_NotificationSave"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/EditText_NotificationAmount"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_gravity="center_vertical"

            app:layout_constraintVertical_bias="0.926"/>


</android.support.constraint.ConstraintLayout>