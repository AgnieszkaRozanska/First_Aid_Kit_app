<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Medicines"
android:background="@drawable/twojeleki">


    <Button android:background="@drawable/dodajlekprzyisk"
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:id="@+id/Button_Take_Med_Occur"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="196dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="68dp"/>

    <Button android:id="@+id/Button_All_Med_Drugs"
            android:background="@drawable/wszystkielekiprzycisk"
            android:layout_width="135dp"
            android:layout_height="180dp"
            app:layout_constraintStart_toEndOf="@+id/Button_Take_Med_Occur"
            android:layout_marginStart="56dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="64dp"
            android:layout_marginTop="196dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.676"/>

    <Button android:id="@+id/Button_Back"
            android:background="@drawable/powrot"
            android:layout_width="190dp"
            android:layout_height="90dp"
            android:layout_gravity="center_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="108dp"
            app:layout_constraintTop_toBottomOf="@+id/Button_All_Med_Drugs"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.671"/>

</android.support.constraint.ConstraintLayout>