<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/menu"
        tools:context=".TakeMedicineOccur.UpdateRemoveMenuTakeMedicinOccur">


    <TextView
            android:text="Pora dnia"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/textView3" android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/updateRemoveTakeMedicineOccur_MedicineTimeofDay"
            app:layout_constraintHorizontal_bias="0.055"/>
    <TextView
            android:hint="Medicine Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/UpdateRemoveTakeMedicineOccur_MedicineName"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="28sp" android:layout_marginTop="28dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="110dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:hint="Dose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/updateRemoveTakeMedicineOccur_Dose"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/UpdateRemoveTakeMedicineOccur_MedicineName"
            android:layout_marginEnd="64dp" app:layout_constraintEnd_toEndOf="parent"
    />
    <TextView
            android:hint="Time of day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/updateRemoveTakeMedicineOccur_MedicineTimeofDay"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/updateRemoveTakeMedicineOccur_Dose"/>
    <TextView
            android:hint="After before meal"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:id="@+id/updateRemoveTakeMedicineOccur_MedicineAfterBeforeMeal"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/updateRemoveTakeMedicineOccur_MedicineTimeofDay"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"/>



    <Button
            android:layout_width="152dp"
            android:layout_height="153dp"
            android:background="@drawable/removemed2"
            android:id="@+id/Button_RemoveTakeMedicineOccur"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="44dp"
            android:layout_marginBottom="155dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_UpdateDoseTakeMedicineOccur"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.272"/>
    <Button
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/updatedose"
            android:id="@+id/button_UpdateDoseTakeMedicineOccur"
            android:layout_marginBottom="155dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="36dp"/>
    <TextView
            android:text="Zażywana dawka tabletek"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/textView2" android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/updateRemoveTakeMedicineOccur_Dose"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/UpdateRemoveTakeMedicineOccur_MedicineName"
            app:layout_constraintHorizontal_bias="0.069"/>
    <TextView
            android:text="Pora posiłku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5" android:textSize="18sp"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:layout_marginEnd="44dp"
            app:layout_constraintEnd_toStartOf="@+id/updateRemoveTakeMedicineOccur_MedicineAfterBeforeMeal"
            android:layout_marginStart="10dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.153"/>


</android.support.constraint.ConstraintLayout>