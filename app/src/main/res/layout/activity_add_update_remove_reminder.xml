<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/updatedosebackground"
        tools:context=".takeMedicineOccur.reminder.AddUpdateRemoveReminder">


    <ImageView
            android:id="@+id/ImageTemp"
            android:layout_width="137dp"
            android:layout_height="132dp"
            android:layout_marginTop="108dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/iconclockalarm" />

    <TextView
            android:id="@+id/UpdateReminder_MedicineName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="152dp"
            android:gravity="center_horizontal"
            android:hint="Medicine Name"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/textViewconstinformation"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="80dp"
            android:text="If this medicine have reminder"
            android:textColor="@android:color/darker_gray"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/UpdateReminder_MedicineName" />

    <TextView
            android:id="@+id/textViewconstinformation2"
            android:layout_width="370dp"
            android:layout_height="74dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="10dp"
            android:text="@string/AddUpdatereminderInfo"
            android:textAlignment="center"
            android:textColor="@android:color/darker_gray"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewconstinformation" />

    <EditText
            android:id="@+id/AddUpdateReminder"
            android:layout_width="231dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/prostokat"
            android:inputType="numberDecimal"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewconstinformation2" />

    <Button
            android:id="@+id/ButtonSaveAddUpdateReminder"
            android:layout_width="133dp"
            android:layout_height="171dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="40dp"
            android:background="@drawable/saveaddupdatereminder"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/AddUpdateReminder"
            app:layout_constraintVertical_bias="0.407" />

    <Button
            android:id="@+id/buttonRemoveReminder"
            android:layout_width="177dp"
            android:layout_height="170dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:background="@drawable/removereminder"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/AddUpdateReminder"
            app:layout_constraintVertical_bias="0.495" />


</android.support.constraint.ConstraintLayout>