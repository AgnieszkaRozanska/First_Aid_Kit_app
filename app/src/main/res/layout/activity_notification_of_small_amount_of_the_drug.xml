<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".firstAidKitAllYourMedicines.notlification.NotificationOfSmallAmountOfTheDrug">

    <TextView
            android:id="@+id/textView_iformationAboutAlarmCount"
            android:layout_width="291dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="152dp"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="@string/notificationCount_information"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    <EditText
            android:id="@+id/Notification_UnitInStock"
            android:layout_width="231dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="48dp"
            android:background="@drawable/prostokat"
            android:inputType="numberSigned"
            android:digits="0123456789"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_iformationAboutAlarmCount" />

    <ImageView
            android:layout_width="85dp"
            android:layout_height="87dp"
            app:srcCompat="@drawable/icondrugs"
            android:id="@+id/imageView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/Update_Count_of_Med_Name"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginEnd="12dp"
            android:layout_marginTop="36dp" app:layout_constraintTop_toTopOf="parent"/>


    <Button
            android:background="@drawable/savicon"
            android:layout_width="134dp"
            android:layout_height="176dp"
            android:id="@+id/NotificationCount_SaveButton"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_gravity="center_vertical"

            app:layout_constraintVertical_bias="0.926"
            app:layout_constraintTop_toBottomOf="@+id/Notification_UnitInStock"/>


</android.support.constraint.ConstraintLayout>