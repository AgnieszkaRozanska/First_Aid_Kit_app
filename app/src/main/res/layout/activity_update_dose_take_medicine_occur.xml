<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/updatedosebackground"
        tools:context=".TakeMedicineOccur.UpdateDoseTakeMedicineOccur">

    <ImageView
            android:layout_width="106dp"
            android:layout_height="101dp" app:srcCompat="@drawable/icondrugs"
            android:id="@+id/imageView2" android:layout_marginTop="96dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"/>


    <TextView
            android:hint="Medicine Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/UpdateDose_TakeMedicineOccur_MedicineName"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="24sp" android:layout_marginTop="128dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/imageView2"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.625"/>
    <TextView
            android:text="Wpisz nową dawkę leku"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:id="@+id/textViewconst" android:textStyle="bold"
            android:textSize="18sp" android:textColor="@android:color/darker_gray" android:layout_marginTop="68dp"
            app:layout_constraintTop_toBottomOf="@+id/UpdateDose_TakeMedicineOccur_MedicineName"
            android:layout_marginStart="96dp" app:layout_constraintStart_toStartOf="parent"/>


    <EditText android:layout_width="231dp"
              android:layout_height="48dp"
              android:background="@drawable/prostokat"
              android:textAlignment="center"
              app:layout_constraintEnd_toEndOf="parent"
              android:id="@+id/UpdateDose_TakeMedicineOccur_Dose"
              android:layout_gravity="center_vertical"
              android:inputType="numberDecimal" android:layout_marginEnd="76dp" android:layout_marginTop="44dp"
              app:layout_constraintTop_toBottomOf="@+id/textViewconst"
              android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintHorizontal_bias="1.0"/>

    <Button
            android:layout_width="142dp"
            android:layout_height="184dp"
            android:background="@drawable/savicon"
            android:id="@+id/Button_SaveUpdateDose_TakeMedOccur" android:layout_marginBottom="28dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="144dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/UpdateDose_TakeMedicineOccur_Dose"
            app:layout_constraintVertical_bias="1.0"/>

</android.support.constraint.ConstraintLayout>