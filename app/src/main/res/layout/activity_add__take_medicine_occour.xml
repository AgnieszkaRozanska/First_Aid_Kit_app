<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Add_TakeMedicineOccour">

    <RadioGroup
            android:layout_width="150dp"
            android:layout_height="135dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/Add_Med_Occour_BeforeAfterMeal_radioGroup"
            android:layout_marginTop="92dp"
            app:layout_constraintTop_toBottomOf="@+id/Add_Med_Occour_Dose_EditText">
        <RadioButton
                android:text="Przed posiłkiem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/RadioButton_BeforeMeal"
                android:layout_weight="1" android:textColor="@color/colorAccent" android:textStyle="bold"/>
        <RadioButton
                android:text="W trakcie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/RadioButton_DuringMeal"
                android:layout_weight="1" android:textStyle="bold" android:textColor="@color/colorAccent"/>
        <RadioButton
                android:text="Po posiłku"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/RadioButton_AfterMeal"
                android:layout_weight="1"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"/>
    </RadioGroup>
    <Spinner
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/Add_Med_Occour_Medicine_Spinner"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <EditText android:id="@+id/Add_Med_Occour_Dose_EditText"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginTop="28dp"
              app:layout_constraintTop_toBottomOf="@+id/Add_Med_Occour_Medicine_Spinner"
              android:backgroundTint="@color/colorPrimary"/>

    <RadioGroup
            android:layout_width="150dp"
            android:layout_height="138dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/Add_Med_Occour_BeforeAfterMeal_radioGroup"
            android:layout_marginEnd="8dp"
            android:id="@+id/Add_Med_Occour_TimeOfDay_radioGroup"
            app:layout_constraintHorizontal_bias="0.553"
            android:layout_marginTop="92dp"
            app:layout_constraintTop_toBottomOf="@+id/Add_Med_Occour_Dose_EditText">
        <RadioButton
                android:text="Popołudnie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/RadioButton_Afternoon"
                android:layout_weight="1" android:backgroundTint="@color/colorPrimary"
                android:textColor="@color/colorPrimary" android:textStyle="bold"/>
        <RadioButton
                android:text="Rano"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/RadioButton_Morning"
                android:layout_weight="1" android:textColor="@color/colorPrimary" android:textStyle="bold"/>
        <RadioButton
                android:text="Wieczór"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/RadioButton_Evening"
                android:layout_weight="1" android:textColor="@color/colorPrimary" android:textStyle="bold"/>
    </RadioGroup>
    <Button
            android:background="@drawable/ikonastrzalka"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/Add_Med_Occour_Next_Button"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="148dp"
            android:layout_marginBottom="60dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>