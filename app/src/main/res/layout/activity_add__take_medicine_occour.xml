<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".takeMedicineOccur.addTakeedicineOccur.ActivityAddTakeMedicineOccour">

    <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:id="@+id/Add_Med_Occour_BeforeAfterMeal_radioGroup"
            app:layout_constraintTop_toBottomOf="@+id/chooseAfterBeforeMeal_MedOccur_const"
            app:layout_constraintStart_toStartOf="parent">
        <RadioButton
                android:text="Przed posiłkiem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/RadioButton_BeforeMeal"
                android:layout_weight="1" android:textColor="@color/colorAccent" android:textStyle="bold"/>
        <RadioButton
                android:text="W trakcie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/RadioButton_DuringMeal"
                android:layout_weight="1" android:textStyle="bold" android:textColor="@color/colorAccent"/>
        <RadioButton
                android:text="Po posiłku"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/RadioButton_AfterMeal"
                android:layout_weight="1"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"/>
    </RadioGroup>
    <Spinner
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/Add_Med_Occour_Medicine_Spinner"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/chooseMedOccur_const"
            android:layout_marginEnd="4dp"/>

    <EditText android:id="@+id/Add_Med_Occour_Dose_EditText"
              android:layout_width="match_parent"
              android:layout_height="49dp"
              app:layout_constraintEnd_toEndOf="parent"
              android:backgroundTint="@color/colorPrimary" android:layout_marginTop="8dp"
              app:layout_constraintTop_toBottomOf="@+id/chooseDose_MedOccur_const"
              android:inputType="number"
              android:layout_marginEnd="4dp"/>

    <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="41dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:orientation="horizontal"
            android:id="@+id/Add_Med_Occour_TimeOfDay_radioGroup"
            app:layout_constraintTop_toBottomOf="@+id/chooseTimeOfDay_MedOccur_const">
        <RadioButton
                android:text="Rano"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/RadioButton_Morning"
                android:layout_weight="1" android:textColor="@color/colorAccent" android:textStyle="bold"/>
        <RadioButton
                android:text="Popołudnie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/RadioButton_Afternoon"
                android:layout_weight="1" android:backgroundTint="@color/colorPrimary"
                android:textColor="@color/colorAccent" android:textStyle="bold"/>
        <RadioButton
                android:text="Wieczór"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/RadioButton_Evening"
                android:layout_weight="1" android:textColor="@color/colorAccent" android:textStyle="bold"/>
    </RadioGroup>
    <Button
            android:background="@drawable/remindericon"
            android:layout_width="95dp"
            android:layout_height="123dp"
            android:id="@+id/Button_Add_Med_Occour_Add_Reminder"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="60dp"
            android:layout_marginBottom="10dp"/>
    <TextView
            android:text="@string/chooseMed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chooseMedOccur_const"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            android:textAllCaps="false"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="@string/chooseDose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chooseDose_MedOccur_const"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@+id/Add_Med_Occour_Medicine_Spinner"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="12dp"/>
    <TextView
            android:text="@string/chooseTimeOfDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chooseTimeOfDay_MedOccur_const"
            android:textSize="18sp" android:textColor="@color/colorPrimary" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/Add_Med_Occour_Dose_EditText" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="@string/chooseAterBeforeMeal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chooseAfterBeforeMeal_MedOccur_const"
            android:textSize="18sp" android:textColor="@color/colorPrimary" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/Add_Med_Occour_TimeOfDay_radioGroup"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"/>
    <Button
            android:layout_width="106dp"
            android:layout_height="144dp"
            android:background="@drawable/savicon"
            android:id="@+id/Button_Save_TakeMedOccur"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            app:layout_constraintEnd_toStartOf="@+id/Button_Add_Med_Occour_Add_Reminder" android:layout_marginEnd="8dp"
            android:onClick="addMedOccur"
            app:layout_constraintHorizontal_bias="0.685"
            android:layout_marginBottom="8dp"/>
    <TextView
            android:text="@string/InformationAboutDateAndDays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ChooseDate_const" android:textSize="18sp"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/Add_Med_Occour_BeforeAfterMeal_radioGroup"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:layout_width="107dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_ChooseDate_Start"
            android:fontFamily="sans-serif-condensed" android:textAllCaps="false"
            android:text="Wybierz datę" android:textColor="@android:color/holo_blue_dark"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ChooseDate_const"
            android:layout_marginBottom="210dp"
            android:layout_marginEnd="48dp"
            app:layout_constraintEnd_toStartOf="@+id/textView_ForHowMayDays_info"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="Od"
            android:layout_width="23dp"
            android:layout_height="22dp"
            android:id="@+id/textView9" android:textSize="18sp"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/button_ChooseDate_Start" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/ChooseDate_const"
            app:layout_constraintHorizontal_bias="0.275" android:layout_marginBottom="215dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="Przez ile dni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp" android:textColor="@android:color/holo_blue_dark" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ChooseDate_const"
            android:id="@+id/textView_ForHowMayDays_info" android:layout_marginEnd="12dp"
            app:layout_constraintEnd_toStartOf="@+id/editText_ForHowManyDays"
            android:layout_marginBottom="215dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <EditText
            android:layout_width="42dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText_ForHowManyDays" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ChooseDate_const"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
            app:layout_constraintVertical_bias="0.421"
            android:layout_marginBottom="210dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
            android:text="Do"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_DatatoEnd_info" android:textSize="18sp"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="185dp"
            app:layout_constraintTop_toBottomOf="@+id/textView9" android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/textView_DateEnd"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:layout_width="297dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView_DateEnd"
            android:text="Musisz wybrać datę początkową i okres brania aby obliczyć datę końcową"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="175dp"
            app:layout_constraintTop_toBottomOf="@+id/button_ChooseDate_Start"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>