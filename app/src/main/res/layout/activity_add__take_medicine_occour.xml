<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Add_TakeMedicineOccour">

    <RadioGroup
            android:layout_width="150dp"
            android:layout_height="133dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="12dp" android:id="@+id/radioGroup" android:layout_marginTop="72dp"
            app:layout_constraintTop_toBottomOf="@+id/spinner">
        <RadioButton
                android:text="Przed posiłkiem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/RadioButton_BeforeMeal"
                android:layout_weight="1"/>
        <RadioButton
                android:text="W trakcie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/RadioButton_DuringMeal"
                android:layout_weight="1"/>
        <RadioButton
                android:text="RadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/RadioButton_AfterMeal"
                android:layout_weight="1"/>
    </RadioGroup>
    <Spinner
            android:layout_width="368dp"
            android:layout_height="42dp"
            android:id="@+id/spinner"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/Add_MedTake_Occour_Dose" android:layout_marginEnd="8dp"/>

    <EditText android:id="@+id/Add_MedTake_Occour_Dose"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginTop="16dp"
              app:layout_constraintTop_toTopOf="parent"/>

    <RadioGroup
            android:layout_width="150dp"
            android:layout_height="138dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/radioGroup"
            android:layout_marginEnd="8dp"
            android:id="@+id/Grup_RadnioButton_TimeOfDay"
            android:layout_marginTop="72dp"
            app:layout_constraintTop_toBottomOf="@+id/spinner"
            app:layout_constraintHorizontal_bias="0.428">
        <RadioButton
                android:text="Rano"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/RadioButton_Morning"
                android:layout_weight="1"/>
        <RadioButton
                android:text="Popołudnie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/RadioButton_Afternoon"
                android:layout_weight="1"/>
        <RadioButton
                android:text="Wieczór"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/RadioButton_Evening"
                android:layout_weight="1"/>
    </RadioGroup>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Button_TakeMedOccour_Save"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="136dp"
            android:layout_marginBottom="68dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>