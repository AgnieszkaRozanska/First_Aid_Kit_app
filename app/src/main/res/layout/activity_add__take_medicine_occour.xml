<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TakeMedicineOccur.ActivityAddTakeMedicineOccour">

    <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:id="@+id/Add_Med_Occour_BeforeAfterMeal_radioGroup"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/chooseAfterBeforeMeal_MedOccur_const"
            app:layout_constraintStart_toStartOf="parent">
        <RadioButton
                android:text="Przed posiłkiem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/RadioButton_BeforeMeal"
                android:layout_weight="1" android:textColor="@color/colorAccent" android:textStyle="bold"/>
        <RadioButton
                android:text="W trakcie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/RadioButton_DuringMeal"
                android:layout_weight="1" android:textStyle="bold" android:textColor="@color/colorAccent"/>
        <RadioButton
                android:text="Po posiłku"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/RadioButton_AfterMeal"
                android:layout_weight="1"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"/>
    </RadioGroup>
    <Spinner
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/Add_Med_Occour_Medicine_Spinner"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/chooseMedOccur_const"/>

    <EditText android:id="@+id/Add_Med_Occour_Dose_EditText"
              android:layout_width="match_parent"
              android:layout_height="49dp"
              app:layout_constraintEnd_toEndOf="parent"
              android:backgroundTint="@color/colorPrimary" android:layout_marginTop="16dp"
              app:layout_constraintTop_toBottomOf="@+id/chooseDose_MedOccur_const" android:inputType="number"/>

    <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="41dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="4dp"
            android:orientation="horizontal"
            android:id="@+id/Add_Med_Occour_TimeOfDay_radioGroup"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/chooseTimeOfDay_MedOccur_const">
        <RadioButton
                android:text="Rano"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/RadioButton_Morning"
                android:layout_weight="1" android:textColor="@color/colorAccent" android:textStyle="bold"/>
        <RadioButton
                android:text="Popołudnie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/RadioButton_Afternoon"
                android:layout_weight="1" android:backgroundTint="@color/colorPrimary"
                android:textColor="@color/colorAccent" android:textStyle="bold"/>
        <RadioButton
                android:text="Wieczór"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/RadioButton_Evening"
                android:layout_weight="1" android:textColor="@color/colorAccent" android:textStyle="bold"/>
    </RadioGroup>
    <Button
            android:background="@drawable/remindericon"
            android:layout_width="100dp"
            android:layout_height="136dp"
            android:id="@+id/Add_Med_Occour_Next_Button"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="52dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/Add_Med_Occour_BeforeAfterMeal_radioGroup"
            app:layout_constraintVertical_bias="0.25"/>
    <TextView
            android:text="@string/chooseMed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chooseMedOccur_const"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            android:textAllCaps="false"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="@string/chooseDose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chooseDose_MedOccur_const"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/Add_Med_Occour_Medicine_Spinner"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="@string/chooseTimeOfDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chooseTimeOfDay_MedOccur_const"
            android:textSize="18sp" android:textColor="@color/colorPrimary" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/Add_Med_Occour_Dose_EditText" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="@string/chooseAterBeforeMeal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chooseAfterBeforeMeal_MedOccur_const"
            android:textSize="18sp" android:textColor="@color/colorPrimary" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/Add_Med_Occour_TimeOfDay_radioGroup"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="4dp"/>
    <Button
            android:layout_width="117dp"
            android:layout_height="156dp"
            android:background="@drawable/savicon"
            android:id="@+id/Button_Save_TakeMedOccur" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/Add_Med_Occour_BeforeAfterMeal_radioGroup"
            app:layout_constraintEnd_toStartOf="@+id/Add_Med_Occour_Next_Button" android:layout_marginEnd="8dp"
             android:onClick="addMedOccur"/>
</android.support.constraint.ConstraintLayout>