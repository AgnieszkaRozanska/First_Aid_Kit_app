<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TakeMedicineOccur.AddTakeMedicineOccur2">

    <CalendarView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Add_Med_Occur_CalendarView"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="68dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="16dp"/>

    <EditText android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/Add_Med_Occur_Reminde_Time"
              android:layout_marginTop="15dp"
              app:layout_constraintTop_toBottomOf="@+id/Add_Med_Occur_CalendarView"
              app:layout_constraintEnd_toEndOf="parent" android:backgroundTint="@color/colorPrimary"
              android:hint="@string/choosehourReminder" android:textAlignment="center"/>

    <Button android:background="@drawable/przyciskzapisz"
            android:layout_width="210dp"
            android:layout_height="80dp"
            android:id="@+id/Add_Med_Occur_SAVE"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/Add_Med_Occur_Reminde_Time"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_gravity="center_vertical" app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="@string/chooseReminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reminder_const" android:textSize="24sp"
            android:textStyle="bold|italic" android:textColor="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/Add_Med_Occur_CalendarView"
            app:layout_constraintVertical_bias="0.307" android:layout_marginStart="16dp"/>
</android.support.constraint.ConstraintLayout>