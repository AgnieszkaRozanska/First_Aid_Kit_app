<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/updatedosebackground"
        tools:context=".firstAidKitAllYourMedicines.updateRemoveMedicine.ActivityUpdateCountofMedicines">
    <TextView android:layout_width="277dp"
              android:layout_height="50dp"
              android:id="@+id/Update_Count_of_Med_Name"
              android:layout_marginTop="128dp"
              app:layout_constraintTop_toTopOf="parent"
              android:textSize="24sp" android:textColor="@color/colorPrimary"
              android:textAlignment="center"
              app:layout_constraintStart_toStartOf="parent" android:textStyle="bold"/>

    <EditText android:layout_width="231dp"
              android:layout_height="48dp"
              android:background="@drawable/prostokat"
              android:textAlignment="center"
              app:layout_constraintEnd_toEndOf="parent"
              android:id="@+id/Update_Count_of_Med_Count"
              android:inputType="numberDecimal"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_gravity="center_vertical"
              android:layout_marginTop="44dp"
              app:layout_constraintTop_toBottomOf="@+id/textView4"/>

    <Button
        android:background="@drawable/savicon"
        android:layout_width="134dp"
        android:layout_height="176dp"
        android:id="@+id/Update_Count_of_Med_Update"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/Update_Count_of_Med_Count"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_gravity="center_vertical"

        app:layout_constraintVertical_bias="0.926"/>
    <TextView
            android:text="@string/ActivityUpdateCountMedicinesInfromation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" android:textSize="18sp"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/Update_Count_of_Med_Name"
            android:layout_marginStart="88dp" app:layout_constraintStart_toStartOf="parent"
            android:textStyle="bold"/>
    <ImageView
            android:layout_width="85dp"
            android:layout_height="87dp"
            app:srcCompat="@drawable/icondrugs"
            android:id="@+id/imageView3"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="76dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/Update_Count_of_Med_Name"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0"/>


</android.support.constraint.ConstraintLayout>