<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Update_Count_of_Medicines">
    <TextView android:layout_width="match_parent"
              android:layout_height="50dp"
              android:id="@+id/Update_Count_of_Med_Name"
              android:layout_marginTop="56dp"
              app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
    />

    <EditText android:layout_width="match_parent"
              android:layout_height="48dp"
              android:background="@drawable/prostokat"
              android:hint="Wpisz nową ilość lekarst"
              android:textAlignment="center"
              app:layout_constraintEnd_toEndOf="parent"
              android:id="@+id/Update_Count_of_Med_Count"
              android:layout_marginTop="44dp"
              android:layout_gravity="center_vertical"
              app:layout_constraintTop_toBottomOf="@+id/Update_Count_of_Med_Name"/>

    <Button
            android:background="@drawable/przyciskzapisz"
            android:layout_width="210dp"
            android:layout_height="80dp"
            android:id="@+id/Update_Count_of_Med_Update"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/Update_Count_of_Med_Count"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_gravity="center_vertical"/>


</android.support.constraint.ConstraintLayout>